{
  "name": "proshop",
  "version": "1.0.0",
  "description": "This is an ecommerce application created using MERN stack.",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node backend/server.js",
    "server": "nodemon backend/server.js",
    "client": "npm run dev --prefix frontend",
    "dev": "concurrently \"npm run server \" \"npm run client \" ",
    "import:data": "node backend/seeder.js",
    "destroy:data": "node backend/seeder.js -d",
    "build": "npm install && npm --prefix frontend install && npm --prefix frontend run build"
  },
  "author": "Sheik Abdul Rahman",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.7",
    "express": "^4.21.1",
    "instamojo-nodejs": "^0.0.5",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.7.1",
    "multer": "^1.4.5-lts.1",
    "stripe": "^17.2.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^5.0.0",
    "concurrently": "^9.0.1",
    "dotenv": "^16.4.5",
    "nodemon": "^3.1.7"
  }
}
